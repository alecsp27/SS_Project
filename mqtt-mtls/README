Certificates:

    Run:
        chmod +x script-genereate.sh
        ./script-genereate.sh
        docker-compose up -d


Run Subscribe

    docker run -it --rm \
        -v "$PWD/certs:/certs" \
        eclipse-mosquitto mosquitto_sub \
        --cafile /certs/ca.crt \
        --cert /certs/client.crt \
        --key /certs/client.key \
        -h host.docker.internal \
        -p 8883 \
        -t test/topic \
        -d


Run Send message

    docker run -it --rm \
        -v "$PWD/certs:/certs" \
        eclipse-mosquitto mosquitto_pub \
        --cafile /certs/ca.crt \
        --cert /certs/client.crt \
        --key /certs/client.key \
        -h host.docker.internal \
        -p 8883 \
        -t test/topic \
        -m "âœ… Hello from secure MQTT PUB!" \
        -d

